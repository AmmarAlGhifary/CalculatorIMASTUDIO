<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">




    <EditText
        android:id="@+id/edt_Input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        />

        <EditText
        android:id="@+id/edt_Input2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_Tambah"
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="@string/Tambah"
        app:layout_constraintStart_toStartOf="@+id/edt_Input1"
        app:layout_constraintTop_toBottomOf="@+id/edt_Input1" />

    <Button
        android:id="@+id/btn_Kurang"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="@string/Kurang"
        app:layout_constraintStart_toEndOf="@+id/btn_Tambah"
        app:layout_constraintTop_toBottomOf="@+id/edt_Input1" />

    <Button
        android:id="@+id/btn_Kali"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="@string/Kali"
        app:layout_constraintEnd_toStartOf="@+id/btn_Bagi"
        app:layout_constraintTop_toBottomOf="@+id/edt_Input1" />

    <Button
        android:id="@+id/btn_Bagi"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="@string/Bagi"
        app:layout_constraintEnd_toEndOf="@+id/edt_Input1"
        app:layout_constraintTop_toBottomOf="@+id/edt_Input1" />

    <TextView
        android:id="@+id/txt_Hasil"
        android:layout_width="150dp"
        android:layout_height="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:textAlignment="center"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Input2" />

</android.support.constraint.ConstraintLayout>